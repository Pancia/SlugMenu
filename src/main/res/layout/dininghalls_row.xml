<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dininghalls_outer_layout"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dininghalls_primaryrow_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dininghalls_primaryrow_dhname"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="45"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/dzs_sm_app_name"/>

        <TextView
            android:id="@+id/dininghalls_primaryrow_avgrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:text="@string/dzs_sm_avgdhrating"/>

        <RatingBar
            android:id="@+id/dininghalls_primaryrow_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:rating="1"
            android:numStars="1"/>

    </LinearLayout>

</LinearLayout>