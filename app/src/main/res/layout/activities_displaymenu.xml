<?xml version="1.0" encoding="utf-8"?>

<com.dayzerostudio.slugguide.slugmenu.MySlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/displaymenu_container">

    <fragment android:id="@+id/displaymenu_masterfragment"
        android:name="com.dayzerostudio.slugguide.slugmenu.activities.DiningHallsListFragment"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"/>

    <FrameLayout
        android:id="@+id/displaymenu_detailfragment"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"/>

</com.dayzerostudio.slugguide.slugmenu.MySlidingPaneLayout>